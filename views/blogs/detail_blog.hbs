<div class="container " style="margin-top:100px">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb black h3 lighten-2">
            <li class="breadcrumb-item"><a class="white-text" href="/home"> <i class="fa fa-home"
                        aria-hidden="true"></i>  Home</a></li>
            <li class="breadcrumb-item"><a class="white-text" href="/category/{{category}}">{{pname}}</a></li>
            <li class="breadcrumb-item active"> <a style="color:gold"
                    href="/category/{{category}}/{{category_child}}">{{name}}</a>
            </li>
        </ol>
    </nav>

    <a href="/category/{{category}}/{{category_child}}">
        <p class="title1">{{category_child}} </p>
    </a>
    <p class=" font-weight-bold text-danger " style="font-size: 50px;">{{title}}</p>
    <p class=" font-weight-bold"> Người đăng: {{writer}}</p>
    <small>Đăng lúc: {{date_publish}} </small>

    <p>Tag: <a href="/category/{{category}}/{{category_child}}">{{tag}}</a></p>


    <div class="row">
        <div class=" col-lg-10 col-sm-12  ">
            <h4 class=" font-weight-bold">{{summary}}</h4>
            {{{content}}}
        </div>

    </div>


    <div class="row BinhLuan">
        <div class="detailBox">
            <div class="titleBox">
                <h2> 3 Bình luận</h2>
            </div>
            <div class="actionBox">
                <ul class="commentList">
                    <li>
                        <div class="commenterImage">
                            <img src="http://placekitten.com/50/50" />
                        </div>
                        <h3 class="namefb">Phạm Tiến Dũng</h3>
                        <div class="commentText">
                            <p class="">Bài này khá là hay</p>
                            <a href="javascript:void(0)">Trả lời</a>
                            <i class="fa fa-thumbs-up" aria-hidden="true">11</i>
                            <a href="javascript:void(0)">Thích</a>
                            <i class="fa fa-thumbs-down" aria-hidden="true">22</i>
                            <a href="javascript:void(0)">Không thích</a>
                            <span class="date sub-text">on March 5th, 2014</span>
                        </div>
                    </li>
                    <li>
                        <div class="commenterImage">
                            <img src="http://placekitten.com/45/45" />
                        </div>
                        <h3 class="namefb">Nguyễn Tuấn</h3>
                        <div class="commentText">
                            <p class="">Cảm thấy rất vui vì web có những bài viết về trang web</p>
                            <a href="javascript:void(0)">Trả lời</a>
                            <i class="fa fa-thumbs-up" aria-hidden="true">121</i>
                            <a href="javascript:void(0)">Thích</a>
                            <i class="fa fa-thumbs-down" aria-hidden="true">232</i>
                            <a href="javascript:void(0)">Không thích</a>
                            <span class="date sub-text">on March 5th, 2014</span>

                        </div>
                    </li>
                    <li>
                        <div class="commenterImage">
                            <img src="http://placekitten.com/40/40" />
                        </div>
                        <h3 class="namefb">Nguyễn Thanh Tuấn</h3>
                        <div class="commentText">
                            <p class="">Tuấn đẹp trai ghê</p>
                            <a href="javascript:void(0)">Trả lời</a>
                            <i class="fa fa-thumbs-up" aria-hidden="true">0</i>
                            <a href="javascript:void(0)">Thích</a>
                            <i class="fa fa-thumbs-down" aria-hidden="true">2</i>
                            <a href="javascript:void(0)">Không thích</a>
                            <span class="date sub-text">on March 5th, 2014</span>

                        </div>
                    </li>
                </ul>
                <form class="form-inline" role="form">
                    <div class="form-group">

                        <input class="form-control" type="text" placeholder="Bình luận" />
                    </div>
                    <div class="form-group">
                        <button class="btn btn-default">Gửi bình luận</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="row  BaiVietLienQuan mb-5">
        <h3 class="the-article-summary col-sm-9">Bài viết liên quan</h3>
        {{#each relate}}
        <div class="row mt-5 col-sm-9">
            <div class="col-sm-4">
                <a href="/blogs/{{category_child}}/{{id_blog}}"> <img src="{{link_img}} " alt=""
                        class="card-img img_blognew" /></a>
            </div>
            <div class="col-sm-8">
                <a class="title_link " href="/blogs/{{category_child}}/{{id_blog}}">
                    <h3>{{title}}</h3>
                </a>
                <div class="row">
                    <p class="col-sm-4 time_publish">{{date_publish}}</p>
                    <a class="col-sm-8 Name_blogs" href="/category/{{category}}/{{category_child}}">
                        <p>{{Name}}</p>
                    </a>
                </div>
                <p class="card-text">{{summary}}</p>
            </div>
        </div>
        <hr>
        {{/each }}
    </div>
</div>